<div data-ng-app="app">
    <div class="container" data-ng-controller="ReservationController">
        <h2>Drag attendees to assign them to rooms</h2>

        <div class="row clearfix">
		    <div class="col-md-2 column">
                <div data-ng-repeat="p in model.participants | filter:{RoomNumber:0, Name:'!!'}">
                    <div id="{{p.Id}}" data-draggable="">{{p.Name}} - {{p.RoomNumber}}</div>
                </div>        
		    </div>
		    
			<div class="col-md-10">
				<div data-ng-repeat="y in [1, 2, 3, 4, 5]" class="hotelRooms">
					<div data-ng-repeat="x in [1, 2, 3, 4, 5]">
                        <h6>Room #{{(y-1)*5+x}}</h6>
                        <div id="bin{{(y-1)*5+x}}" data-droppable="{{(y-1)*5+x}}" data-drop="handleDrop">
                            <div data-ng-repeat="p in model.participants | filter:{RoomNumber:(y-1)*5+x}">
                                <div id="{{p.Id}}" data-draggable="">{{p.Name}} - {{p.RoomNumber}}</div>
                            </div>        
                        </div>
					</div>
				</div>
			</div>
	    </div>
    </div>
</div>